<UserControl x:Class="Client.UserControlContactItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <!-- 2 Spalten (Spalte 1: Benutzername, Spalte2: Anwesenheitsstatus) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="50*"/>
            <!--TODO: Was bedeutet * ?-->
        </Grid.ColumnDefinitions>

        <TextBlock VerticalAlignment="Center" Name="tbEmail" Grid.Column="0" Text="Email" Margin="10 0" Opacity="0.8"/>
        <Border Name="borderStatus" Grid.Column="1" Width="10" Height="10" VerticalAlignment="Bottom" Margin="5" HorizontalAlignment="Right" CornerRadius="15" Background="LightGreen"/>
    </Grid>
</UserControl>
